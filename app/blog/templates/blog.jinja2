{% extends "base.jinja2" %}
{% block content %}
<h1>Posts</h1>
{% if posts %}
{% for post in posts %}
    <div class="post-preview">
        <span><a href="{{ url_for('blog.posts', id=post.id) }}">{{ post.user_id }}</a></span>
        <span>{{ post.title }}</span>
    </div>
{% endfor %}
{% endif %}
{% endblock %}