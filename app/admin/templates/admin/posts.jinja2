{% extends "admin/base.jinja2" %}
{% block head %}
<link rel="stylesheet" href="{{ url_for('blog.static', filename='css/code.css') }}" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
{% endblock %}
{% block content %}
<h1>Blog Posts</h1>
<button class="btn btn-primary" data-toggle="modal" data-target="#newPostModal" type="button" id="newPost">New Post</button>
<div class="modal fade" id="newPostModal" tabeindex="-1" role="dialog" aria-labelledby="newPostModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newPostHeader">Add a New Post</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label class="form-label" for="postFile">Import Post</label>
                        <input type="file" class="form-control-file" id="postFile">
                        <textarea class="form-control" id="postText" name="postText" rows="30"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" id="getPreview">Render</button>
                    </div>
                </form>
                <div id="preview">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block footer %}
<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
<script>
    var mde = new SimpleMDE({ element: document.getElementById('postText') });

    function load_content(content) {
        mde.value(content);
    }

    $("#postFile").change(function() {
        var fr = new FileReader();
        // On successful load of content, put into textarea
        fr.onload = function() {
            load_content(fr.result);
        }
        fr.readAsText($(this).prop('files')[0]);
    });

    function renderPreview(response) {
        if( response['message'] === 'success') {
            var preview = $('#preview');
            preview.empty();
            preview.html(response['content']);
        }
        else {
            alert('Bad input or no input!');
        }
    };

    $("#getPreview").click(function() {
        var text = mde.value();
        $.ajax({
            url: $SCRIPT_ROOT + 'admin/_preview',
            dataType: 'json',
            method: 'POST',
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify({'postText': text}),
            success: function(response) {
                renderPreview(response);
            }
        });
    })
</script>
{% endblock %}